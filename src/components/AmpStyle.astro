---
/*
 * https://github.com/unocss/unocss/blob/main/packages/reset/tailwind.css
 * https://github.com/unocss/unocss/blob/main/packages/reset/antfu.md
 */
export interface Props {
  customStyle?: string | undefined
}

const { customStyle }: Props = Astro.props;
const style = `
/* Style Reset */
*,::before,::after {box-sizing: border-box;border-width: 0;border-style: solid;border-color: currentColor;}
html {line-height: 1.5;-webkit-text-size-adjust: 100%;-moz-tab-size: 4;tab-size: 4;scrollbar-gutter: stable;font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';}
body {margin: 0;line-height: inherit;}
h1,h2,h3,h4,h5,h6 {font-size: inherit;font-weight: inherit;}
a {color: inherit;text-decoration: inherit;}
button,input,optgroup,select,textarea {font-family: inherit;font-size: 100%;line-height: inherit;color: inherit;margin: 0;padding: 0;}
button,select {text-transform: none;}
button,[type='button'],[type='reset'],[type='submit'] {-webkit-appearance: button;background-color: transparent;background-image: none;}
button,[role='button'] {cursor: pointer;}
:disabled {cursor: default;}
summary {display: list-item;}
blockquote,dl,dd,h1,h2,h3,h4,h5,h6,hr,figure,p,pre {margin: 0;}
ol,ul,menu {list-style: none;margin: 0;padding: 0;}
textarea {resize: vertical;}
img,svg,video,canvas,audio,iframe,embed,object {display: block;vertical-align: middle;}

/* Theme */
:root {
  --color: #373737;
  --color-subtle: #525252;
  --color-accent: #005C5F;
  --color-bg: #FCFCFC;
  --color-bg-subtle: #F3F3F3;
  --color-bg-accent: #EAEAEA;
  --color-border: #1F1F1F;
  --color-border-subtle: #DDE1E3;

  --color-light: #FCFCFC;
  --color-dark: #000000;
  --color-primary-dark: #004FC2;
  --color-primary-light: #24C2F6;
  --color-secondary-dark: #575757;
  --color-secondary-light: #B4B4B4;
  --color-positive-dark: #006535;
  --color-positive-light: #00D100;
  --color-negative-dark: #B20000;
  --color-negative-light: #FF6047;
  --color-warning-dark: #784F06;
  --color-warning-light: #F2F200;
}

.dark {
  --color: #D8D8D8;
  --color-subtle: #C0C0C0;
  --color-accent: #3ED0F9;
  --color-bg: #1A1A1A;
  --color-bg-subtle: #272727;
  --color-bg-accent: #323232;
  --color-border: #4A4A4A;
  --color-border-subtle: #3C3C3C;
}

.text-color {color: var(--color);}
.text-color-subtle {color: var(--color-subtle);}
.text-color-accent {color: var(--color-accent);}
.bg-color {background-color: var(--color-bg);}
.bg-color-subtle {background-color: var(--color-bg-subtle);}
.bg-color-accent {background-color: var(--color-bg-accent);}
.border-color {border-color: var(--color-border);}
.border-color-subtle {border-color: var(--color-border-subtle);}
.border-color-accent {border-color: var(--color-accent);}
.text-color-light {color: var(--color-light);}
.text-color-dark {color: var(--color-dark);}
.bg-color-primary-dark {background-color: var(--color-primary-dark);}
.bg-color-primary-light {background-color: var(--color-primary-light);}
.bg-color-secondary-dark {background-color: var(--color-secondary-dark);}
.bg-color-secondary-light {background-color: var(--color-secondary-light);}
.bg-color-positive-dark {background-color: var(--color-positive-dark);}
.bg-color-positive-light {background-color: var(--color-positive-light);}
.bg-color-negative-dark {background-color: var(--color-negative-dark);}
.bg-color-negative-light {background-color: var(--color-negative-light);}
.bg-color-warning-dark {background-color: var(--color-warning-dark);}
.bg-color-warning-light {background-color: var(--color-warning-light);}
.fill-none {fill: none;}
.fill-text-color {fill: var(--color);}
.stroke-color-positive-dark {stroke: var(--color-positive-dark);}
.stroke-color-negative-dark {stroke: var(--color-negative-dark);}

/* Common Global Style */
h1 {font-size: 1.75em;}
h2 {font-size: 1.5em;}
h3 {font-size: 1.25em;}
h4 {font-size: 1.125em;}
button {display: inline-flex;justify-content: center;align-items: center;user-select: none;border-radius: 0.375rem; margin-left: 0.5rem; padding-top: 0.25rem; padding-bottom: 0.25rem; padding-left: 1rem; padding-right: 1rem;}

/* Common Atomic Style */
.absolute {position: absolute;}
.relative {position: relative;}
.block {display: block;}
.flex {display: flex;}
.inline-flex {display: inline-flex;}
.flex-col {flex-direction: column;}
.flex-row {flex-direction: row;}
.flex-grow {flex-grow: 1;}
.justify-center {justify-content: center;}
.justify-between {justify-content: space-between;}
.justify-around {justify-content: space-around;}
.items-center {align-items: center;}
.text-center {text-align: center;}
.text-xxs {font-size: 0.625rem; line-height: 1rem;}
.text-xs {font-size: 0.75rem; line-height: 1rem;}
.text-sm {font-size: 0.875rem; line-height: 1.25rem;}
.text-base {font-size: 1rem; line-height: 1.5rem;}
.text-lg {font-size: 1.125rem; line-height: 1.75rem;}
.text-xl {font-size: 1.25rem; line-height: 1.75rem;}
.border-1 {border-width: 1px;}
.rounded-md {border-radius: 0.375rem;}
.rounded-1-2 {border-radius: 50%;}
.select-none {user-select: none;}
.cursor-pointer {cursor: pointer;}
.cursor-grab {cursor: grab;}
.touch-none {touch-action: none;}

/* Common Components Style */
.p-radio-button:focus,.p-radio-button:hover {text-decoration-line: underline;}
.p-radio-button:focus {z-index: 1;}
.p-radio-button:first-of-type {border-bottom-right-radius: 0px;border-top-right-radius: 0px;}
.p-radio-button:last-of-type {border-top-left-radius: 0px;border-bottom-left-radius: 0px;}
.p-radio-button:not(:last-child) {border-right-width: 0px;}
.p-radio-button:not(:first-of-type):not(::not(:first-of-type)-of-type) {border-radius: 0px;}

/* Custom AMP Style */
amp-mega-menu nav {background-color: transparent;}
${customStyle ?? ""}
`;
---

<style is:inline amp-custom set:html={style}></style>
