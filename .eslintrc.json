{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    // https://eslint.org/docs/latest/user-guide/configuring/configuration-files#extending-configuration-files
    "eslint:all",
    // https://typescript-eslint.io/docs/linting/configs
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:@typescript-eslint/strict",
    "plugin:@typescript-eslint/all",
    // https://eslint.vuejs.org/user-guide
    "plugin:vue/vue3-recommended",
    // https://github.com/nuxt/eslint-plugin-nuxt
    "plugin:nuxt/recommended",
    "prettier"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "extraFileExtensions": [".vue"],
    "parser": "@typescript-eslint/parser",
    "project": ["./tsconfig.json"],
    "sourceType": "module",
    "vueFeatures": {
      "filter": false
    }
  },
  "plugins": [
    "@typescript-eslint",
    // https://eslint.vuejs.org/user-guide/#why-doesn-t-it-work-on-vue-files
    "vue",
    "nuxt"
  ],
  "reportUnusedDisableDirectives": true,
  "root": true,
  "rules": {
    // eslint:recommended
    "no-undef": "off",

    // eslint:all
    "id-length": "off",
    "max-lines": "off",
    "max-params": "off",
    "max-statements": "off",
    "no-ternary": "off",
    "one-var": "off",
    "sort-imports": "off",
    "sort-keys": "off",

    // plugin:@typescript-eslint/recommended
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],

    // plugin:@typescript-eslint/recommended-requiring-type-checking
    "@typescript-eslint/restrict-plus-operands": ["error", { "checkCompoundAssignments": true }],

    // plugin:@typescript-eslint/all
    "@typescript-eslint/naming-convention": "off",
    "@typescript-eslint/no-magic-numbers": "off",
    "@typescript-eslint/prefer-readonly-parameter-types": "off",

    // plugin:vue/vue3-recommended
    "vue/multi-word-component-names": ["error", { "ignores": ["default", "index"] }]
  },
  "overrides": [
    {
      "files": ["pages/**/*.vue", "layouts/**/*.vue"],
      "rules": {
        "vue/multi-word-component-names": "off"
      }
    }
  ]
}
